      <ul class="clearfix" style="background:#fff">
       <!--{foreach from=$categories item=cat name=name}-->
        <li {if $smarty.foreach.name.first}class="cur"{/if}>{$cat.name|escape:html}</li>
<!--{/foreach}-->
